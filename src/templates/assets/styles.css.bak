/*DO NOT CHANGE ANYTHING IN THIS FILE. THIS FILE IS PREGENERATED AND WILL BE OVERWRITTEN.*/
.light {
    --background: #EFF1F5;
    --lightbackground: #DCE0E8;
    --darktext: #8C8FA1;
    --Heading: #DF8E1D;
    --links: #1E66F5;
    --links-hover: #04A5E5;
    --text: #4C4F69;
    --comment: #7C7F93;
}

.dark{
    --background: #1E1E2E;
    --lightbackground: #414559;
    --darktext: #7F849C;
    --Heading: #F9E2AF;
    --links-hover: #89DCEB;
    --links: #89B4FA;
    --text: #CDD6F4;
    --comment: #9399B2;
}

:root {
    --radius-lg: 0.5rem;
    --sidebar-width: clamp(240px, 25vw, 280px);
    --page-width: clamp(700px, 80vw, 1000px);
    --spacing-unit: 1rem;

    --text-xs: clamp(0.65rem, 1.5vw, 0.75rem);
    --text-sm: clamp(0.75rem, 1.7vw, 0.875rem);
    --text-base: clamp(0.875rem, 2vw, 1rem);
    --text-lg: clamp(1rem, 2.2vw, 1.125rem);
    --text-xl: clamp(1.125rem, 2.5vw, 1.25rem);
    --text-2xl: clamp(1.25rem, 3vw, 1.5rem);
    --text-3xl: clamp(1.5rem, 3.5vw, 1.875rem);
    --text-4xl: clamp(1.75rem, 4vw, 2.25rem);
    --text-5xl: clamp(2.25rem, 5vw, 3rem);
    --text-6xl: clamp(2.75rem, 6vw, 3.75rem);
}

/* HTML TAGS */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: var(--font-mono);
    background: var(--background);
    color: var(--text);
    line-height: 1.3;
    min-height: 100vh;
}

img {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    padding: var(--spacing-unit);
}

mark {
    background: var(--lightbackground);
    color: var(--text);
    padding: 0.2em 0.4em;
}

a {
    color: var(--links);
    text-decoration: underline;
    transition: color 0.2s ease;
}

a:hover {
    color: var(--links-hover);
    font-weight: bold;
}

h1,
h2,
h3,
h4,
h5,
h6 {
    margin: var(--spacing-unit) 0 calc(var(--spacing-unit) / 2);
    line-height: 1.2;
}

table,
td,
th {
    border: 1px solid var(--lightbackground);
}

th {
    font-size: var(--text-xl);
}

td {
    padding: 0.5rem
}

li code {
    background: var(--lightbackground);
    padding: 0.1rem 0.5rem;
    border-radius: var(--radius-lg);
}

ul {
    list-style-type: disc;
}

ol {
    list-style-type: decimal;
}

pre {
    position: relative;
    padding: 0.5rem;
    margin: 1rem 0;
    overflow: auto;
}

pre {
    border: 1px solid var(--lightbackground);
    border-radius: var(--radius-lg);
}

.code-block-wrapper {
    position: relative;
}

.copy-button {
    position: absolute;
    top: 8px;
    right: 8px;
    color: var(--text);
    border: none;
    border-radius: var(--radius-lg);
    padding: 0.25rem 0.75rem;
    font-size: var(--text-xs);
    cursor: pointer;
    transition: opacity 0.2s ease-in-out, background-color 0.2s ease-in-out;
    z-index: 5;
    background: var(--lightbackground);
    border: 2px solid var(--text);
}

.page-content ul {
    margin-left: 1rem;
}

.page-content ol {
    margin-left: 1rem;
}

/* CLASSES */
.profile-picture {
    width: 3rem;
}

.container {
    display: flex;
    flex-wrap: wrap;
    max-width: 100%;
    margin: 0 auto;
}

.sidebar {
    flex: 0 0 var(--sidebar-width);
    max-width: 100%;
    padding: calc(var(--spacing-unit) * 2) 0 0 var(--spacing-unit);
    position: sticky;
    top: 0;
    border-right: 1px solid var(--lightbackground);
    background: var(--background);
    height: 100vh;
    transition: transform 0.3s ease-in-out;
}

.sidebar-inner {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
}

.content {
    flex: 1;
    min-width: 0;
    padding: 4rem 1rem 0 1rem;
}

.content-container {
    width: 100%;
    max-width: var(--page-width);
    margin: 0 auto;
    overflow-x: auto;
}

.content-container-inner {
    width: 100%;
}

.top-navbar {
    display: none;
}

.file-tree {
    margin-top: 1rem;
    padding: 0 1rem;
    height: 100%;
}

.file-tree ul {
    list-style: none;
    padding-left: 1rem;
    margin: auto;
}

.file-tree li {
    cursor: pointer;
    color: var(--text);
}

.file-tree li.directory {
    font-weight: bolder;
}

.dirname {
    padding-left: 0.5rem;
}

.file-tree li.file {
    color: var(--text);
    font-weight: normal;
    padding-left: 1.5rem;
}

.file-tree li.file:hover {
    font-weight: bolder;
}

.file-tree li.directory>div>.directory-arrow {
    transform: rotate(0deg);
    transition: transform 0.3s ease-out;
    display: inline-flex;
    align-items: center;
}

.file-tree li.directory.open>div>.directory-arrow {
    transform: rotate(90deg);
    transition: transform 0.3s ease-out;
}

.file-tree .collapsed {
    max-height: 0;
    overflow: hidden;
    opacity: 0;
    transition: max-height 0.4s ease-in-out, opacity 0.3s ease-in-out, padding 0.2s ease-in-out;
    padding-top: 0;
    padding-bottom: 0;
}

.file-tree li.directory.open>ul {
    max-height: 1000px;
    opacity: 1;
    padding-top: 0.25rem;
    padding-bottom: 0.25rem;
    transition: max-height 0.4s ease-in-out, opacity 0.3s ease-in-out, padding 0.2s ease-in-out;
}

.paragraph-spacing+.paragraph-spacing {
    margin-top: 1rem;
}

.owner a {
    color: var(--Heading)
}

@media (max-width: 767px) {
    .top-navbar {
        display: block;

    }

    .container {
        display: block;
    }

    .sidebar {
        position: fixed;
        left: 0;
        top: 4.04rem;
        width: 100vw;
        height: 100vh;
        transform: translateX(-100%);
        transition: transform 0.3s ease-in-out;
        z-index: 10;
        padding-left: 0;
        overflow-y: hidden;
        padding-top: 0;
    }

    .sidebar-inner {
        margin: auto;
        width: 100%;
        height: 100%;
        overflow-y: auto;
    }

    .sidebar.open {
        transform: translateX(0);
    }

    .content {
        margin: 0;
    }

    .sidebar-inner .owner {
        display: none;
    }

    .sidebar-inner .sidebar-theme-toggle {
        display: none;
    }
}

@media (max-width: 480px) {
    .file-tree {
        padding: 0 calc(var(--spacing-unit) / 2);
    }

    blockquote {
        padding: calc(var(--spacing-unit) / 2);
    }

    img {
        padding: calc(var(--spacing-unit) / 2);
    }
}

@media (max-width: 1024px) {
    .sidebar {
        flex-basis: clamp(200px, 20vw, 240px);
    }

    .content-container {
        max-width: 100%;
        padding: 0 calc(var(--spacing-unit) / 2);
    }
}

@media (max-width: 767px) {
    .top-navbar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        border-bottom: 2px solid var(--lightbackground);
    }

    .top-navbar-left {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .top-navbar-left .sidebar-toggle {
        padding: 0.25rem;
        display: flex;
        align-items: center;
        color: var(--text);
        background: var(--background);
        border: 2px solid var(--text);
        border-radius: var(--radius-lg);
    }

    .top-navbar-left a {
        font-weight: bolder;
        color: var(--Heading);
        font-size: var(--text-2xl);
    }

    .container {
        flex-direction: column;
    }

    .sidebar.open {
        transform: translateX(0);
    }

    .content {
        padding: calc(var(--spacing-unit) * 1) var(--spacing-unit) var(--spacing-unit);
    }
}

::-webkit-scrollbar {
    width: 6px;
    height: 6px;
}

::-webkit-scrollbar-track {
    background: var(--lightbackground);
}

::-webkit-scrollbar-thumb {
    background: var(--darktext);
    border-radius: var(--radius-lg);
}


.token.bold {
    font-weight: bold;
}

.token.italic {
    font-style: italic;
}

.token.inserted {
    background: #a89984;
}

.token.deleted {
    background: #fb4934;
}

.token.regex {
    background: #EA76CB;
}

.token.function {
    color: #1E66F5;
}

.token.url {
    color: #1E66F5;
    text-decoration: underline;
}

.token.attr-value,
.token.attr-value .punctuation {
    color: #a89984;
}

.token.string,
.token.char {
    color: #40A02B;
}

.token.property,
.token.constant,
.token.variable {
    color: #FE640B;
}

.token.entity,
.token.number,
.token.symbol {
    color: #D20F39;
}

.token.tag,
.token.tag .punctuation,
.token.doctype,
.token.builtin {
    color: #D20F39;
}

.token.operator,
.token.punctuation,
.token.attr-name {
    color: #04A5E5;
}

.token.delimiter,
.token.boolean,
.token.keyword,
.token.selector,
.token.important,
.token.atrule {
    color: #8839EF;
}


.token.comment,
.token.prolog,
.token.cdata {
    color: var(--comment);
}

:not(pre)>code[class*="language-"],
pre[class*="language-"] {
    background: var(--background);
    border: 2px solid var(--lightbackground);
}

code[class*="language-"],
pre[class*="language-"] {
    font-family: var(--font-mono);
    direction: ltr;
    text-align: left;
    white-space: pre;
    word-spacing: normal;
    word-break: normal;
    -moz-tab-size: 4;
    -o-tab-size: 4;
    tab-size: 4;
    -webkit-hyphens: none;
    -moz-hyphens: none;
    -ms-hyphens: none;
    hyphens: none;
}

pre[class*="language-"] {
    padding: 1em;
    margin: 0.5em 0;
    overflow: auto;
    border: 1px solid var(--lightbackground);
}

:not(pre)>code[class*="language-"] {
    padding: 0.1em;
    border-radius: 0.3em;

}

.sidebar-inner h1 {
    display: flex;
    align-self: center;
}

.sidebar-theme-toggle button {
    color: var(--text);
    padding: 0.25rem;
    display: flex;
    border-radius: var(--radius-lg);
    border: 1px solid var(--darktext);
}

.sidebar-theme-toggle {
    display: flex;
    margin: auto;
    gap: 3rem;
}

.page-content .page-tags {
    display: none
}

.page-content h1 {
    border-bottom: 2px solid var(--lightbackground);
}

.search-button,
.theme-toggle {
    padding: 0.25rem;
    color: var(--text);
    background: var(--background);
    border: 2px solid var(--text);
    border-radius: var(--radius-lg);
}
